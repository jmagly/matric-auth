{
  "realm": "matric-dev",
  "enabled": true,
  "displayName": "MATRIC Development",
  "displayNameHtml": "<b>MATRIC</b> Development",
  "sslRequired": "external",
  "registrationAllowed": false,
  "rememberMe": true,
  "verifyEmail": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "permanentLockout": false,
  "maxFailureWaitSeconds": 900,
  "minimumQuickLoginWaitSeconds": 60,
  "waitIncrementSeconds": 60,
  "quickLoginCheckMilliSeconds": 1000,
  "maxDeltaTimeSeconds": 43200,
  "failureFactor": 5,
  "defaultSignatureAlgorithm": "RS256",
  "revokeRefreshToken": true,
  "refreshTokenMaxReuse": 1,
  "accessTokenLifespan": 300,
  "accessTokenLifespanForImplicitFlow": 900,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 28800,
  "accessCodeLifespan": 60,
  "accessCodeLifespanUserAction": 300,
  "accessCodeLifespanLogin": 1800,
  "actionTokenGeneratedByAdminLifespan": 43200,
  "actionTokenGeneratedByUserLifespan": 300,
  "oauth2DeviceCodeLifespan": 600,
  "oauth2DevicePollingInterval": 5,
  "passwordPolicy": "",
  "internationalizationEnabled": true,
  "supportedLocales": ["en"],
  "defaultLocale": "en",
  "browserSecurityHeaders": {
    "contentSecurityPolicyReportOnly": "",
    "xContentTypeOptions": "nosniff",
    "xRobotsTag": "none", 
    "xFrameOptions": "SAMEORIGIN",
    "contentSecurityPolicy": "frame-src 'self'; frame-ancestors 'self'; object-src 'none';",
    "xXSSProtection": "1; mode=block",
    "strictTransportSecurity": "max-age=31536000; includeSubDomains"
  },
  "eventsEnabled": true,
  "eventsListeners": ["jboss-logging"],
  "adminEventsEnabled": true,
  "adminEventsDetailsEnabled": true,
  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "Administrator role",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "developer", 
        "description": "Developer role",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "viewer",
        "description": "Viewer role", 
        "composite": false,
        "clientRole": false
      }
    ]
  },
  "groups": [
    {
      "name": "administrators",
      "path": "/administrators", 
      "realmRoles": ["admin"]
    },
    {
      "name": "developers",
      "path": "/developers",
      "realmRoles": ["developer"] 
    },
    {
      "name": "viewers",
      "path": "/viewers",
      "realmRoles": ["viewer"]
    }
  ],
  "defaultRoles": ["viewer"],
  "users": [
    {
      "username": "admin@matric.local",
      "email": "admin@matric.local",
      "emailVerified": true,
      "enabled": true,
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": ["admin"],
      "groups": ["/administrators"]
    },
    {
      "username": "developer@matric.local", 
      "email": "developer@matric.local",
      "emailVerified": true,
      "enabled": true,
      "firstName": "Developer",
      "lastName": "User", 
      "credentials": [
        {
          "type": "password",
          "value": "dev123",
          "temporary": false
        }
      ],
      "realmRoles": ["developer"],
      "groups": ["/developers"]
    },
    {
      "username": "viewer@matric.local",
      "email": "viewer@matric.local", 
      "emailVerified": true,
      "enabled": true,
      "firstName": "Viewer",
      "lastName": "User",
      "credentials": [
        {
          "type": "password", 
          "value": "view123",
          "temporary": false
        }
      ],
      "realmRoles": ["viewer"],
      "groups": ["/viewers"]
    }
  ],
  "clients": [
    {
      "clientId": "matric-web-app",
      "name": "MATRIC Web Application",
      "description": "Main web application client",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false,
      "clientAuthenticatorType": "client-secret",
      "redirectUris": [
        "http://localhost:5173/*",
        "http://localhost:3000/*",
        "http://localhost:8090/*"
      ],
      "webOrigins": [
        "http://localhost:5173",
        "http://localhost:3000", 
        "http://localhost:8090"
      ],
      "fullScopeAllowed": false,
      "defaultClientScopes": ["web-origins", "acr", "roles", "profile", "email"],
      "optionalClientScopes": ["address", "phone", "offline_access"]
    },
    {
      "clientId": "matric-api",
      "name": "MATRIC API",
      "description": "Backend API client for service-to-service communication",
      "enabled": true,
      "protocol": "openid-connect", 
      "publicClient": false,
      "bearerOnly": true,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "clientAuthenticatorType": "client-secret",
      "fullScopeAllowed": false,
      "defaultClientScopes": ["web-origins", "acr", "roles", "profile", "email"]
    },
    {
      "clientId": "vault",
      "name": "HashiCorp Vault",
      "description": "Vault authentication client",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "vault-dev-secret-2024",
      "redirectUris": [
        "http://localhost:8200/ui/vault/auth/oidc/oidc/callback",
        "http://localhost:8200/oidc/callback",
        "http://matric-keycloak:8081/ui/vault/auth/oidc/oidc/callback",
        "http://matric-keycloak:8081/oidc/callback"
      ],
      "webOrigins": ["http://localhost:8200"],
      "fullScopeAllowed": false,
      "defaultClientScopes": ["web-origins", "acr", "roles", "profile", "email"],
      "optionalClientScopes": ["address", "phone", "offline_access"]
    }
  ],
  "clientScopes": [
    {
      "name": "roles",
      "description": "User roles",
      "protocol": "openid-connect",
      "protocolMappers": [
        {
          "name": "realm roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "userinfo.token.claim": "true",
            "id.token.claim": "true", 
            "access.token.claim": "true",
            "claim.name": "roles",
            "jsonType.label": "String",
            "multivalued": "true"
          }
        }
      ]
    }
  ],
  "defaultDefaultClientScopes": ["role_list", "profile", "email", "roles", "web-origins", "acr"],
  "defaultOptionalClientScopes": ["offline_access", "address", "phone"],
  "attributes": {
    "frontendUrl": "http://localhost:8081",
    "cibaBackchannelTokenDeliveryMode": "poll",
    "cibaAuthRequestedUserHint": "login_hint",
    "oauth2DevicePollingInterval": "5",
    "cibaInterval": "5",
    "cibaExpiresIn": "120",
    "oauth2DeviceCodeLifespan": "600",
    "parRequestUriLifespan": "60"
  }
}